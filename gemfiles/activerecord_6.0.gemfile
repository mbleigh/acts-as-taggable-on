source "https://rubygems.org"

gem "activerecord", "~> 6.0.0"
case ENV["DB"]
when "postgresql"
  gem 'pg'
when "mysql"
  gem 'mysql2', '~> 0.4'
else
  gem 'sqlite3'
end

group :local_development do
  gem "guard"
  gem "guard-rspec"
  gem "appraisal"
  gem "rake"
  gem "byebug", platforms: [:mri]
end

gemspec path: "../"
